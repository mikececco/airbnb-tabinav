<div class="d-flex flex-row">

  <div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png); height: 100vh; width: 40%">
    <%= image_tag('airbnb.png', :class => "w-50 p-5") %>
  </div>

  <div class="container mx-auto" style="width: 60%;">
    <div class="p-5">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary rounded-5" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>
