<div class="m-5 p-4 text-center bg-dark rounded-4">
  <h1>Booking confirmed!</h1>

  <h3>Your stay in <%= @flat.address %>, <%= @flat.city %>, <%= @flat.flat_location %></h3>
  <h3>From <strong><%= @booking.start_date %></strong> to <strong><%= @booking.end_date %></strong></h3>

  <p style="color: white;">Price per night: â‚¬<%= @flat.price %></p>
</div>

<div class="text-center mb-5">
  <h1><%= link_to bookings_path, class: "btn btn-primary btn-flat rounded-5" do %>
    <i class="fa-solid fa-calendar-days"></i>  View My Bookings
  <% end %></h1>
</div>

<% if policy(@booking).edit? %>
  <%= link_to "Edit", edit_booking_path(@booking) %>
<% end %>

<% if policy(@booking).destroy? %>
  <%= link_to "Delete",
    booking_path(@booking),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
<% end %>
