<div class=" container p-5">
  <h1 class="text-black">My bookings</h1>

  <div class="d-flex justify-content-between">
    <div class="w-50">
      <ul class="list-group">
        <% sum = 0 %>
        <% nights = 0 %>
        <% @bookings.each do |booking| %>
          <li class="list-group-item align-items-center my-2">
            <div class="">
              <strong><%= booking.flat.address %></strong>
              <%= booking.flat.city %>
              <%= booking.flat.flat_location %>
              <br>
              From <%= booking.start_date %> to <%= booking.end_date %>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="p-2">
                <%= link_to booking_path(booking) do %>
                  <span class="badge badge-primary badge-pill text-black">View details</span>
                <% end %>
              </div>
              <div>
                <span class="badge badge-primary badge-pill text-black bg-info"><%= (booking.end_date.to_date - booking.start_date.to_date).to_i %> nights </span>
              </div>
              <div >
                <span class="badge badge-primary badge-pill text-black border"><%= booking.flat.price %>€</span>
              </div>
            </div>
            <% nights += (booking.end_date.to_date - booking.start_date.to_date).to_i %>
            <% sum += booking.flat.price %>
          </li>
        <% end %>
      </ul>
    </div>
    <div style="width: 400px; height: 60vh; position: sticky; top: 36px">
      <strong>Summary</strong>
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
        Total nights
          <span class="badge badge-primary badge-pill text-black"><%= nights %></span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center bg-info">
        <strong>Total</strong>
          <span class="badge badge-primary badge-pill text-black border"><%= sum %>€</span>
        </li>
      </ul>
    </div>
  </div>
</div>
